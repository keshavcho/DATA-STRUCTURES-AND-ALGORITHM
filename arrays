#include <climits> // For INT_MIN and INT_MAX
#include <iostream>
using namespace std;

int main() {
  int n;
  cout << "Enter the size of the array: ";
  cin >> n;

  int arr[n];
  cout << "Enter the elements of the array: ";
  for (int i = 0; i < n; i++) {
    cin >> arr[i];
  }

  // Initialize min and max with extreme values
  int minVal = INT_MAX; // Start with the maximum possible integer value
  int maxVal = INT_MIN; // Start with the minimum possible integer value

  // Traverse the array to find min and max
  for (int i = 0; i < n; i++) {
    if (arr[i] < minVal) {
      minVal = arr[i]; // Update min value
    }
    if (arr[i] > maxVal) {
      maxVal = arr[i]; // Update max value
    }
  }

  // Output the results
  cout << "Minimum value in the array: " << minVal << endl;
  cout << "Maximum value in the array: " << maxVal << endl;

  return 0;
}